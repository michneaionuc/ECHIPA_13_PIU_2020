<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".chef.ChefFoundRecipeActivity">

    <ImageView
        android:id="@+id/house_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/house_icon"
        app:layout_constraintEnd_toStartOf="@+id/parents_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toEndOf="@+id/house_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chef_Luis_processing"
        android:layout_width="107dp"
        android:layout_height="130dp"
        android:alpha="0.7"
        android:src="@drawable/chef_luis"
        app:layout_constraintTop_toBottomOf="@id/house_icon"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Found it! \nâœ…"
        android:textColor="@color/text_color"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/house_icon" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/recipe_gif"
        android:layout_width="404dp"
        android:layout_height="245dp"
        android:background="@drawable/recipe"
        app:layout_constraintTop_toBottomOf="@id/chef_Luis_processing"
        tools:layout_editor_absoluteX="-3dp" />

    <ImageView
        android:id="@+id/chef_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:src="@drawable/luis_icons"
        app:layout_constraintTop_toBottomOf="@id/recipe_gif"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>