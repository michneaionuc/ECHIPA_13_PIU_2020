<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/house_icon"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/house_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/parents_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/parents_first_page_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/house_icon"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"/>

    <ImageButton
        android:id="@+id/teenage_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/teenage_first_page"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/house_icon"
        android:layout_marginTop="70dp"
        android:layout_marginRight="25dp"/>

    <ImageButton
        android:id="@+id/grandparents_Button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/grandparents_fist_page_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parents_button"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"/>

    <ImageButton
        android:id="@+id/kids_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/kids_first_page_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teenage_button"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/back_icon"
        android:onClick="showMap"
        android:textColor="@color/primary_burgundy"
        app:layout_constraintTop_toBottomOf="@id/grandparents_Button" />


</androidx.constraintlayout.widget.ConstraintLayout>