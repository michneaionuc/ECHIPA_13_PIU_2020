<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartHouse">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MapActivity" />
        <activity android:name=".ParentsMainPage" />
        <activity android:name=".TeenageMainPage" />
        <activity android:name=".GrandparentsMainPage" />
        <activity android:name=".KidsMainPage" />
        <activity android:name=".vacuum.VacuumOffActivity" />
        <activity android:name=".vacuum.VacuumOnActivity" />
        <activity android:name=".vacuum.VacuumSettingsActivity" />
        <activity android:name=".temperature.TemperatureActivity" />
        <activity android:name=".security.SecurityMainActivity" />
        <activity android:name=".security.SecurityEmergencyCallActivity" />
        <activity android:name=".security.SecurityCallingActivity" />
        <activity android:name=".security.SecurityViewActivity" />
        <activity android:name=".security.SecurityFrontDoorActivity" />
        <activity android:name=".fridge.MenuFridgeActivity" />
        <activity android:name=".fridge.NotificationFridgeActivity" />
        <activity android:name=".fridge.SettingsFridgeActivity" />
        <activity android:name=".fridge.InsideFridgeZoomOutActivity" />
        <activity android:name=".fridge.InsideFridgeZoomInActivity" />
        <activity android:name=".LoginActivity" />
    </application>

</manifest>